@model List<Antinori.Models.Books>

<!-- TABLE -->
    <table id="DataTables_Table_0" class="table dataTable table-hover">
        <thead>
            <tr>
                <th style="width: 30px">Titolo</th>
                <th style="width: 30px">Autore</th>
                <th style="width: 100px">Descrizione</th>
                <th style="width: 30px">Num. Sezioni</th>
                <th style="width: 30px">Num. Sotto-Sezioni</th>

                <th style="width: 100px"> </th>
            </tr>
        </thead>

        <tbody>
            <!-- Loop on the model.-->
            @foreach (var item in Model) {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td style="max-width:  100px!important;">@item.Description</td>

                <td>
                    @item.Sections.Count
                </td>
                <td>
                    @{ var subsections = 0;
                        foreach(var section in @item.Sections) {
                            subsections += section.SubSections.Count;
                        }
                    }
                    @subsections
                </td>

                <td>
                    <button class="btn btn-default btn-sm" onclick="edit('@item.Id')" title="Modifica">
                        <i class="fa fa-edit">
                        </i>
                    </button>

                    <button class="btn btn-default btn-sm" onclick="delete_get('@item.Id')" title="Cancella">
                        <i class="fa fa-trash-o">
                        </i>
                    </button>
                </td>
            </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th colspan="6"></th>
            </tr>
        </tfoot>
    </table>

