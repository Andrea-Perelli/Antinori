@model List<Antinori.Models.Places>

<!-- TABLE -->
    <table id="DataTables_Table_0" class="table dataTable table-hover">
        <thead>
            <tr>
                <th style="width: 100px">Nome</th>
                <th style="width: 150px">Descrizione</th>
                <th style="width: 100px">Latitudine</th>
                <th style="width: 70px">Longitudine</th>
                <th style="width: 150px">Note</th>
                <th style="width: 100px">#Facsimili Collegati </th>
                <th style="width: 180px"></th>
            </tr>
        </thead>

        <tbody>
            <!-- Loop on the model.-->
            @foreach (var item in Model) {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Latitude</td>
                <td>@item.Longitude</td>
                <td>@item.Notes</td>
                <td>@item.Pages.Count</td>
                <td>
                    <button class="btn btn-default btn-sm" onclick="edit('@item.Id')" title="Modifica">
                        <i class="fa fa-edit">
                        </i>
                    </button>

                    <button class="btn btn-default btn-sm" onclick="delete_get('@item.Id')" title="Cancella">
                        <i class="fa fa-trash-o">
                        </i>
                    </button>

                    <button class="btn btn-default btn-sm" onclick="OpenMap('@item.Latitude', '@item.Longitude')" title="Mostra">
                        <i class="fa fa-eye">
                        </i>
                    </button>
                </td>
            </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <th colspan="7"></th>
            </tr>
        </tfoot>
    </table>

