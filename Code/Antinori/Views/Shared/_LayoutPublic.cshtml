        ul, li {
            list-style-type: none;
            list-style-position: inside;
            margin: 0;
            padding: 0;
        }

    </style>


</head>
<body class="hold-transition login-page">
    @RenderBody()


    <div class="modal fade in" id="MODAL_ID">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="MODAL_titolo"></h4>
                </div>
                <div class="modal-body">
                    <div class="row" id="MODAL_testo" style="margin:2px;">

                    </div>
                </div>
                <div class="modal-footer">
                    <div class="overlay text-center" id="MODAL_Refresh" style="z-index:300; height:60px; width:100%; background-color:rgba(255, 255, 255, 0.60); position:absolute; bottom:0px; left:0px; right:0px">
                        <h3><i class="fa fa-refresh fa-spin"></i></h3>
                    </div>

                    <div class="pull-left">
                        @RenderSection("MODAL_BTN_plus", required: false)
                    </div>
                    <div class="pull-right">
                        <button id="MODAL_BTN_ok" class="btn btn-primary">OK</button>
                        &nbsp;&nbsp;
                        <button id="MODAL_BTN_close" type="button" class="btn btn-primary" data-dismiss="modal" onclick='$("#MODAL_ID").hide()'>Chiudi</button>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_it.js"></script>
    <script src="~/Scripts/my.js"></script>

    <!-- Bootstrap 3.3.7 -->
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- iCheck -->
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    @RenderSection("scripts", required: false)


</body>
</html>
