@model List<Antinori.Models.Books>

@{
    ViewBag.Title = "Antinori";
    Layout = "~/Views/Shared/LayoutPublic.cshtml";
}

<!-- upper Area -->
<section class="banner-area">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-start" style="max-height: 100px!important;">
        </div>
    </div>
</section>
<!-- upper  Area -->
<!-- REFRESHER -->
<div id="CONTENT_Refresh" class="overlay text-center" style="z-index:100; height:80px; background-color:rgba(255, 255, 255, 0.00); margin: auto; position: fixed; display: none;">
    <h3>
        <i class="fa fa-refresh fa-spin"></i>
    </h3>
</div>
<!-- REFRESHER -->
<!-- Start BOOKS Area -->
<section class="testomial-area section-gap" style="padding-bottom: 20px!important; padding-top: 20px!important;">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-8" style="padding-bottom: 30px!important;">
                <div class="title text-center">
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="margin-left: 4%; margin-right: 4%;">
        <div class="col-3">
            @foreach (var b in Model) {
                <div class="single-testimonial item">
                    @{
                        string path = "";
                    }
                    @if (b.PreviewImage != null) {
                        path = b.PreviewImage.Split('\\').Last();
                        path = "/Pics/JPEG/" + path;
                    }
                    <img class="mx-auto" onclick="ShowOpera('@b.Id')" style="max-height: 350px!important;" src="@path" />
                    <p class="desc" style="text-align: left;">
                    </p>
                    @*<h4 onclick="ShowOpera('@b.Id')">@b.Title</h4>*@
                </div>
                
            }
        
        </div>
        <div class="col-9">
            <p class="desc" style="text-align: left;">
                @Model.FirstOrDefault().Description
            </p>
            <section class="course-area section-gap" id="container" style=" position: absolute; bottom: 0; padding: 0;">
            </section>
        </div>
    </div>
</section>
<!-- End BOOKS Area -->
<!-- Start subsections Area -->
<section class="course-area section-gap" id="subsections" style="padding-top: 30px!important;">
</section>
<!-- End subsections Area -->

@section Scripts {
    <script>
        ShowOpera('be41c37a-11fb-44ea-b9a3-3b4298b487ba');
    </script>
}
