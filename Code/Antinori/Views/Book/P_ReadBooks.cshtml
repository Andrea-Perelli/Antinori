@model List<Antinori.Models.Books>

@{
    ViewBag.Title = "Opere";
    Layout = "~/Views/Shared/LayoutPublic.cshtml";
}

<!-- upper Area -->
<section class="banner-area">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-start" style="max-height: 100px!important;">
        </div>
    </div>
</section>
<!-- upper  Area -->

<!-- REFRESHER -->
<div id="CONTENT_Refresh" class="overlay text-center" style="z-index:100; height:80px; background-color:rgba(255, 255, 255, 0.60); margin: auto; position: fixed; display: none;">
    <i class="fa fa-refresh fa-spin"></i>
</div>
<!-- REFRESHER -->

<!-- Start BOOKS Area -->
<section class="testomial-area section-gap" style="padding-bottom: 20px!important; padding-top: 20px!important;">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">@ViewBag.Title</h1>
                    <p>Ecco la lista delle opere presenti su.....</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="active-tstimonial-carusel">
                @foreach(var b in Model) {
                    <div class="single-testimonial item">
                        <img class="mx-auto" style="max-height: 300px!important;" src="~/Pics/JPEG/BibliotecaTommasi.Antinori.Corografia.XXVI-1_0047_12r.jpg" />
                        <p class="desc">
                            @b.Description
                        </p>
                        <h4 onclick="ShowOpera('@b.Id')">@b.Title</h4>
                        <p>
                            scritto da @b.Author
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- End BOOKS Area -->
<!-- Start course Area -->
<section class="course-area section-gap" id="container" style="padding-top: 0!important;">
    
</section>
<!-- End course Area -->