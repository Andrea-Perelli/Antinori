@model Antinori.Models.Pages

@{
    ViewBag.Title = "Trascrizione...";
    Layout = "~/Views/Shared/LayoutPublic.cshtml";
    string path = "/Pics/JPEG_Full/" + Model.PhotoPath.Split('\\').Last();
    string tiff = "/Pics/Tiff/" + Model.BigPhotoPath.Split('\\').Last();

}

<!-- upper Area -->
<section class="banner-area">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-start" style="max-height: 100px!important;">
        </div>
    </div>
</section>
<!-- upper  Area -->
<!-- REFRESHER -->
<div id="CONTENT_Refresh" class="overlay text-center" style="z-index:100; height:80px; background-color:rgba(255, 255, 255, 0.00); margin: auto; position: fixed; display: none;">
    <h3>
        <i class="fa fa-refresh fa-spin"></i>
    </h3>
</div>
<!-- REFRESHER -->

<!-- Start page Area -->
<section class="course-area section-gap" id="subsections" style="padding-top: 30px!important;">

    <div class="row" style="margin-right: 10px!important; margin-left: 10px!important; min-height: 300px; ">
        <div class=".col-sm" style="max-width: 5%;">
            <i class="fa fa-arrow-left" style="font-size: 30px; position: relative; top:40%; transform: translateY(-40%); margin-right: 12px;"></i>
        </div>
        <div class="col-sm" style="max-width: 45%;">

            <div class="row">@Model.NumericOrder</div>
            <div class="row">
                <img src="@path" class="mx-auto" style="width: 100%; margin-bottom: 20px; margin-top: 20px;" />
            </div>
            <!-- BUTTONS ROW -->
            <div class="row" style="padding-bottom: 20px; margin-bottom: solid 1px;">
                <h5 style="color:#777777;">
                    Downloads
                    <i class="fa fa-cloud-download info circle"></i>
                </h5>
            </div>
            <div class="row">
                <a href="@path" download class="circle my-button genric-btn info" title="Download Jpeg" style="margin: 0; color: white; line-height: 34px; padding-left: 19px; padding-right: 19px;">
                    Jpeg &nbsp;
                    <i class="fa fa-file-image-o" style="border-radius: 5px!important;"></i>
                </a>
                &nbsp;&nbsp;&nbsp;
                <a href="@tiff" download class="circle my-button genric-btn info" title="Download Tiff" style="margin: 0; color: white; line-height: 34px; padding-left: 19px; padding-right: 19px;">
                    Tiff &nbsp;
                    <i class="fa fa-file-image-o" style="border-radius: 5px!important;"></i>
                </a>

            </div>
        </div>
        <div class="col-sm" style="margin: 20px!important; max-width: 45%;">
            @if(Model.Transcriptions.Count > 0) {
            <p>
                - colore bottoni on hover
                - colore frecce
                - meccanismo frecce
                - info pagina + info opera.
                - invia traduzione.

                @Model.Transcriptions.FirstOrDefault().TEI
            </p>
            }
        </div>
        <div class=".col-sm" style="max-width: 5%;">
            <i class="fa fa-arrow-right" style="font-size: 30px; position: relative; top:40%; transform: translateY(-40%); margin-left: 12px;"></i>
        </div>
    </div>

</section>
<!-- End page Area -->
