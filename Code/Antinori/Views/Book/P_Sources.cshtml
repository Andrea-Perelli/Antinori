@model List<Antinori.Models.Books>

@{
    ViewBag.Title = "Fonti dell'Antinori";
    Layout = "~/Views/Shared/LayoutPublic.cshtml";
}

<!-- upper Area -->
<section class="banner-area">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-start" style="max-height: 100px!important;">
        </div>
    </div>
</section>
<!-- upper  Area -->
<!-- REFRESHER -->
<div id="CONTENT_Refresh" class="overlay text-center" style="z-index:100; height:80px; background-color:rgba(255, 255, 255, 0.00); margin: auto; position: fixed; display: none;">
    <h3>
        <i class="fa fa-refresh fa-spin"></i>
    </h3>
</div>
<!-- REFRESHER -->
<!-- Start BOOKS Area -->
<section class="testomial-area section-gap" style="padding-bottom: 20px!important; padding-top: 20px!important;">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-8" style="padding-bottom: 30px!important;">
                <div class="title text-center">
                    <h1 class="mb-10">@ViewBag.Title</h1>
                    <p>Seleziona l'opera che vuoi leggere</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div style="display: inline-block; margin-left: auto; margin-right: auto; ">
                @foreach(var b in Model) {
                <div class="single-testimonial item" style="display: inline-block;">
                    @{
                        string path = "";
                    }
                    @if (b.PreviewImage != null) {
                        path = b.PreviewImage.Split('\\').Last();
                        path = "/Pics/JPEG/" + path;
                    }

                    <img class="mx-auto" style="max-height: 350px!important;" src="@path" />
                    <p class="desc">
                        @b.Description
                    </p>
                    <h4 onclick="ShowOpera('@b.Id')">@b.Title</h4>
                    <p>
                        scritto da @b.Author
                    </p>
                </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- End BOOKS Area -->

<!-- Start container Area -->
<section class="course-area section-gap" id="container" style="padding-top: 0!important; padding-bottom: 5px!important;">
</section>
<!-- End container Area -->

<!-- Start subsections Area -->
<section class="course-area section-gap" id="subsections" style="padding-top: 30px!important;">
    
</section>
<!-- End subsections Area -->