@model Antinori.Models.AspNetUsers

@{
    ViewBag.Title = "Cambia Password";
    Layout = "~/Views/Shared/LayoutPublic.cshtml";
}

<!-- upper Area -->
<section class="banner-area">
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-start" style="max-height: 100px!important;">
        </div>
    </div>
</section>
<!-- upper  Area -->
<!-- REFRESHER -->
<div id="CONTENT_Refresh" class="overlay text-center" style="z-index:100; height:80px; background-color:rgba(255, 255, 255, 0.60); margin: auto; position: fixed; display: none;">
    <i class="fa fa-refresh fa-spin"></i>
</div>
<!-- REFRESHER -->
<!-- CHANGE PASSWORD -->
<div class="whole-wrap">
    <div class="container">
        <div class="section-top-border">
            <div class="row">

                <div class="col-lg-11 col-md-11">
                    <h3 class="mb-30">Cambia Passowrd</h3>
                    @using(Html.BeginForm("PublicChangePassword", "Account", FormMethod.Post, new { id = "CONTENT_PublicChangePassword_Form" })) {
                        <!-- we can set an action with this attribute: we set that the authentication token has to be the same between requests. -->
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(p => p.Id)
                        <div class="row">
                            <div class="form-group" style="min-width: 300px!important;">
                                <label class="ls text-uppercase mb-0">Vecchia Password</label>
                                <input type="password" id="pass1" name="Password" value="@Model.Password" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group" style="margin-right: 50px!important;">
                                <label class="ls text-uppercase mb-0">Nuova Password</label>
                                <input type="password" id="pass2" name="NewPassword" value="@Model.ConfirmPassword" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group" style="min-width: 300px!important;">
                                <label class="ls text-uppercase mb-0">Ripeti Password</label>
                                <input type="password" id="pass3" name="NewPassword1" value="@Model.NewPassword" class="form-control">
                            </div>
                        </div>
                        <!-- ERROR MESSAGES -->
                        <div id="nosamepass" style="color: #f53f51!important; font-weight: bold;  margin-left: -15px; display: none;">Le password non corrispondono!</div>
                        <div id="smallpass" style="color: #f53f51!important; font-weight: bold; margin-left: -15px; display: none;">Password troppo corta!</div>

                        <div class="row" style="margin-top: 35px!important;">
                            <div class="button-group-area mt-40" style="margin: auto;">
                                <a href="#" class="genric-btn info circle my-button" onclick="PublicChangePassword()">Cambia</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
