<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard       
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3 id="numberOfUsers">&nbsp;</h3>
                    <p>Utenti totali</p>
                </div>
                <div class="icon">
                    <i class="ion ion ion-person-stalker"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3 id="numberOfNormalUsers">&nbsp;</h3>
                    <p>Trascrittori</p>
                </div>
                <div class="icon">
                    <i class="ion ion-ios-person"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3 id="numberOfBooks">&nbsp;</h3>
                    <p>Opere</p>
                </div>
                <div class="icon">
                    <i class="ion ion-ios-book"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-red">
                <div class="inner">
                    <h3 id="numberOfTranscriptionsToCheck">&nbsp;</h3>
                    <p>Trascrizioni da valutare</p>
                </div>
                <div class="icon">
                    <i class="ion ion-ios-list-outline"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3 id="numberOfPlaces">&nbsp;</h3>
                    <p>Luoghi totali</p>
                </div>
                <div class="icon">
                    <i class="fa fa-globe"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            
            
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            
        </div>
        <!-- ./col -->
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <section class="col-lg-7 connectedSortable">
            <div id="map"></div>
        </section>
        <!-- /.Left col -->

    </div>
    <!-- /.row(main row) -->

</section>
<!-- /.content -->

@section scripts {
<!-- Morris.js charts -->

<script src="~/bower_components/raphael/raphael.min.js"></script>
<script src="~/bower_components/morris.js/morris.min.js"></script>
<!-- Sparkline -->
<script src="~/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
<!-- jvectormap -->
<script src="~/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
<script src="~/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
<!-- jQuery Knob Chart -->
<script src="~/bower_components/jquery-knob/dist/jquery.knob.min.js"></script>

<script>

    $(document).ready(function () {
        LoadUserData();
        LoadTranscrpitiondata();
        LoadPlaceData();
        LoadMap();
    });

    function LoadUserData() {
        // load data.

        // show refresher.
        REFRESH_show("INEVIDENZA_Refresh");

        $.getJSON('@Url.Action("GetUsersInfo","Account")',
            function (model) {
                $("#numberOfUsers").html(model.numberOfUsers);
                $("#numberOfNormalUsers").html(model.numberOfNormalUsers);
                REFRESH_hide("INEVIDENZA_Refresh");

            });
        }

    function LoadTranscrpitiondata() {
        // load data.
        // show refresher.
        REFRESH_show("INEVIDENZA_Refresh");

        $.getJSON('@Url.Action("GetBooksInfo","Book")',
            function (model) {
                $("#numberOfBooks").html(model.numberOfBooks);
                $("#numberOfTranscriptionsToCheck").html(model.numberOfTranscriptionsToCheck);
                REFRESH_hide("INEVIDENZA_Refresh");

            });
    }

    function LoadPlaceData() {
        // show refresher.
        REFRESH_show("INEVIDENZA_Refresh");

        $.getJSON('@Url.Action("GetPlaceNumber","Place")',
            function (model) {
                $("#numberOfPlaces").html(model.numberOfPlaces);
                REFRESH_hide("INEVIDENZA_Refresh");

            });
    }

    function LoadMap() {
        // show refresher.
        REFRESH_show("INEVIDENZA_Refresh");

        $.getJSON('@Url.Action("GetMap","Place")',
            function (model) {
                $("#map").html(model);
                REFRESH_hide("INEVIDENZA_Refresh");
            });
    }

</script>
        }
